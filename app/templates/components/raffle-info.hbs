<div class='ui very padded text container segment'>
  <h1 class='ui header'>
    <div class='content'>
      {{raffle.name}}
    </div>
  </h1>

  {{#if raffle.drawingComplete}}
    <h2 class='ui header'>
      {{t 'raffleInfo.completed.header'}}
    </h2>
    {{#each raffle.winners as |winner|}}
      {{winner-card winner=winner}}
    {{/each}}
  {{else}}
    <h2 class='ui header'>
      <i class='icon em em-memo'></i>
      {{#link-to 'raffles.raffle.setup' raffle class='content'}}
        {{t 'raffleInfo.setup'}}
      {{/link-to}}
    </h2>
    <h2 class='ui header'>
      <i class='icon em em-zap'></i>
      {{#link-to
        'raffles.raffle.ready-for-drawing'
        raffle
        class='content'
        disabledWhen=raffleNotSetup
        title=(if raffleNotSetup completeSetupTooltip)}}
        {{t 'raffleInfo.ready'}}
      {{/link-to}}
    </h2>
  {{/if}}
</div>
